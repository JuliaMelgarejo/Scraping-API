<h1>Panel users Admin</h1>
<%= link_to "Invitar usuario", new_user_invitation_path, class: 'btn btn-danger' %> 

<% @users.each do |user| %>
  <%= form_for(user, url: admin_path(user), method: :patch) do |f| %>
    <p>
      <%= f.text_field :email %> -
      <%= f.select(:role, User.roles.keys.map { |w| [w.humanize, w] }) %> -
      <%= f.submit "Update" %>
    </p>
  <% end %>
  <p>
     <%= button_to "Destroy this user", admin_path(user), method: :delete %>
  </p>
<% end %>


